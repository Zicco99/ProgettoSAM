<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/user_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_pannel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/add_butt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/add_button_dark"
            android:adjustViewBounds="true">
        </ImageButton>

        <ImageButton
            android:id="@+id/rmv_butt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/remove_button_dark">
        </ImageButton>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="5dp"
            android:backgroundTint="?CardView_NameProd_Background"
            app:cardCornerRadius="10dp">

                <TextView
                    android:maxLines="1"
                    android:layout_margin="5dp"
                    android:id="@+id/role"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="?CardView_NameProd_Color"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Admin">
                </TextView>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/cardview_role"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="70dp"
            android:layout_height="70dp">
        </ImageView>

        <TextView
            android:id="@+id/user_name"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/user_avatar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center_horizontal"
            android:fontFamily="@font/roboto_medium">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>



